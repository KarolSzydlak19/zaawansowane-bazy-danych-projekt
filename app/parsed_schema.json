{
    "locations": {
        "columns": [
            {
                "name": "id",
                "type": "SERIAL PRIMARY KEY"
            },
            {
                "name": "name",
                "type": "VARCHAR(100) NOT NULL"
            },
            {
                "name": "address",
                "type": "TEXT NOT NULL"
            }
        ]
    },
    "clients": {
        "columns": [
            {
                "name": "id",
                "type": "SERIAL PRIMARY KEY"
            },
            {
                "name": "full_name",
                "type": "VARCHAR(100) NOT NULL"
            },
            {
                "name": "email",
                "type": "VARCHAR(100) UNIQUE NOT NULL"
            },
            {
                "name": "phone",
                "type": "VARCHAR(20) "
            },
            {
                "name": "created_at",
                "type": "TIMESTAMP DEFAULT CURRENT_TIMESTAMP"
            }
        ]
    },
    "bike_types": {
        "columns": [
            {
                "name": "id",
                "type": "SERIAL PRIMARY KEY"
            },
            {
                "name": "name",
                "type": "VARCHAR(50) NOT NULL"
            }
        ]
    },
    "discounts": {
        "columns": [
            {
                "name": "id",
                "type": "SERIAL PRIMARY KEY"
            },
            {
                "name": "name",
                "type": "VARCHAR(100) NOT NULL"
            },
            {
                "name": "description",
                "type": "TEXT "
            },
            {
                "name": "percentage",
                "type": "NUMERIC(5, 2) NOT NULL CHECK (percentage BETWEEN 0 AND 100)"
            },
            {
                "name": "valid_from",
                "type": "DATE "
            },
            {
                "name": "valid_to",
                "type": "DATE "
            }
        ]
    },
    "bikes": {
        "columns": [
            {
                "name": "id",
                "type": "SERIAL PRIMARY KEY"
            },
            {
                "name": "model",
                "type": "VARCHAR(100) NOT NULL"
            },
            {
                "name": "type_id",
                "type": "INT REFERENCES bike_types(id)"
            },
            {
                "name": "location_id",
                "type": "INT REFERENCES locations(id)"
            },
            {
                "name": "status",
                "type": "VARCHAR(20) NOT NULL DEFAULT 'available'"
            },
            {
                "name": "daily_price",
                "type": "NUMERIC(10, 2) NOT NULL"
            }
        ]
    },
    "rentals": {
        "columns": [
            {
                "name": "id",
                "type": "SERIAL PRIMARY KEY"
            },
            {
                "name": "client_id",
                "type": "INT REFERENCES clients(id)"
            },
            {
                "name": "bike_id",
                "type": "INT REFERENCES bikes(id)"
            },
            {
                "name": "rental_start",
                "type": "TIMESTAMP NOT NULL"
            },
            {
                "name": "rental_end",
                "type": "TIMESTAMP "
            },
            {
                "name": "total_price",
                "type": "NUMERIC(10, 2)"
            },
            {
                "name": "location_pickup_id",
                "type": "INT REFERENCES locations(id)"
            },
            {
                "name": "location_dropoff_id",
                "type": "INT REFERENCES locations(id)"
            },
            {
                "name": "discount_id",
                "type": "INT REFERENCES discounts(id)"
            },
            {
                "name": "status",
                "type": "VARCHAR(20) NOT NULL DEFAULT 'active'"
            }
        ]
    },
    "maintenance_logs": {
        "columns": [
            {
                "name": "id",
                "type": "SERIAL PRIMARY KEY"
            },
            {
                "name": "bike_id",
                "type": "INT REFERENCES bikes(id)"
            },
            {
                "name": "description",
                "type": "TEXT NOT NULL"
            },
            {
                "name": "maintenance_date",
                "type": "TIMESTAMP DEFAULT CURRENT_TIMESTAMP"
            }
        ]
    },
    "bike_accessories": {
        "columns": [
            {
                "name": "id",
                "type": "SERIAL PRIMARY KEY"
            },
            {
                "name": "name",
                "type": "VARCHAR(100) NOT NULL"
            },
            {
                "name": "daily_price",
                "type": "NUMERIC(10, 2)"
            }
        ]
    },
    "rental_accessories": {
        "columns": [
            {
                "name": "rental_id",
                "type": "INT REFERENCES rentals(id)"
            },
            {
                "name": "accessory_id",
                "type": "INT REFERENCES bike_accessories(id)"
            },
            {
                "name": "quantity",
                "type": "INT DEFAULT 1"
            }
        ]
    }
}